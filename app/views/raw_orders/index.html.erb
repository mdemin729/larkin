<p id="notice"><%= notice %></p>

<h1>Listing Raw Orders</h1>

<table>
  <thead>
    <tr>
      <th>Delivery date</th>
      <th>Delivery shift</th>
      <th>Origin name</th>
      <th>Origin raw line 1</th>
      <th>Origin city</th>
      <th>Origin state</th>
      <th>Origin zip</th>
      <th>Client</th>
      <th>Name</th>
      <th>Destination raw line 1</th>
      <th>Destination city</th>
      <th>Destination state</th>
      <th>Destination zip</th>
      <th>Phone number</th>
      <th>Mode</th>
      <th>Purchase order number</th>
      <th>Volume</th>
      <th>Handling unit quantity</th>
      <th>Handling unit type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raw_orders.each do |raw_order| %>
      <tr>
        <td><%= raw_order.delivery_date %></td>
        <td><%= raw_order.delivery_shift %></td>
        <td><%= raw_order.origin_name %></td>
        <td><%= raw_order.origin_raw_line_1 %></td>
        <td><%= raw_order.origin_city %></td>
        <td><%= raw_order.origin_state %></td>
        <td><%= raw_order.origin_zip %></td>
        <td><%= raw_order.client %></td>
        <td><%= raw_order.name %></td>
        <td><%= raw_order.destination_raw_line_1 %></td>
        <td><%= raw_order.destination_city %></td>
        <td><%= raw_order.destination_state %></td>
        <td><%= raw_order.destination_zip %></td>
        <td><%= raw_order.phone_number %></td>
        <td><%= raw_order.mode %></td>
        <td><%= raw_order.purchase_order_number %></td>
        <td><%= raw_order.volume %></td>
        <td><%= raw_order.handling_unit_quantity %></td>
        <td><%= raw_order.handling_unit_type %></td>
        <td><%= link_to 'Show', raw_order %></td>
        <td><%= link_to 'Edit', edit_raw_order_path(raw_order) %></td>
        <td><%= link_to 'Destroy', raw_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

