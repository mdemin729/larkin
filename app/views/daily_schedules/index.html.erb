<p id="notice"><%= notice %></p>

<h1>Listing Daily Schedules</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Delivery date</th>
    <th colspan="3">Shifts</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @daily_schedules.each do |daily_schedule| %>
      <tr>
        <td><%= daily_schedule.delivery_date %></td>
        <% daily_schedule.loads.each do |load| %>
          <td><%= link_to load.delivery_shift, load_path(load) %></td>
        <% end %>
        <td><%= link_to 'Show', daily_schedule %></td>
        <td><%= link_to 'Edit', edit_daily_schedule_path(daily_schedule) %></td>
        <td><%= link_to 'Destroy', daily_schedule, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

