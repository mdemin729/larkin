<p id="notice"><%= notice %></p>

<h1>Listing Loads</h1>

<%= link_to 'New Load', new_load_path, class: 'btn btn-default' %>
<br><br>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Delivery date</th>
    <th>Delivery shift</th>
    <th>Driver</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @loads.each do |load| %>
      <tr>
        <td><%= load.delivery_date %></td>
        <td><%= load.delivery_shift %></td>
        <td><%= load.driver %></td>
        <td><%= link_to 'Show', load %></td>
        <td><%= link_to 'Edit', edit_load_path(load) %></td>
        <td><%= link_to 'Destroy', load, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
