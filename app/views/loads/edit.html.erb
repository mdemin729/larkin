<h1>Editing Load</h1>

<%= render 'form' %>

<%= link_to 'Show', @load %> |
<%= link_to 'Back', loads_path %>

<h2>Added orders</h2>
<p>Total volume: <span class="<%= 'text-danger' if @is_vloume_exceeded %>"><%= @total_volume %></span></p>
<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Id</th>
    <th colspan="1">Actions</th>
    <th>Delivery date</th>
    <th>Delivery shift</th>
    <th>Origin name</th>
    <th>Origin raw line 1</th>
    <th>Origin city</th>
    <th>Origin state</th>
    <th>Origin ZIP</th>
    <th>Origin Country</th>
    <th>Client name</th>
    <th>Destination raw line 1</th>
    <th>Destination city</th>
    <th>Destination state</th>
    <th>Destination ZIP</th>
    <th>Destination country</th>
    <th>Phone number</th>
    <th>Mode</th>
    <th>Purchase order number</th>
    <th>Volume</th>
    <th>Unit quantity</th>
    <th>Unit type</th>
  </tr>
  </thead>

  <tbody>
  <% @load.orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= link_to 'Remove', "/loads/#{@load.id}/orders/#{order.id}",
                        method: :delete %></td>
        <% @order_fields.each do |field| %>
            <td><%= order[field] %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Pending orders</h2>

<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Id</th>
    <th colspan="1">Actions</th>
    <th>Delivery date</th>
    <th>Delivery shift</th>
    <th>Origin name</th>
    <th>Origin raw line 1</th>
    <th>Origin city</th>
    <th>Origin state</th>
    <th>Origin ZIP</th>
    <th>Origin Country</th>
    <th>Client name</th>
    <th>Destination raw line 1</th>
    <th>Destination city</th>
    <th>Destination state</th>
    <th>Destination ZIP</th>
    <th>Destination country</th>
    <th>Phone number</th>
    <th>Mode</th>
    <th>Purchase order number</th>
    <th>Volume</th>
    <th>Unit quantity</th>
    <th>Unit type</th>
  </tr>
  </thead>

  <tbody>
  <% @pending_orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= link_to 'Add', "/loads/#{@load.id}/orders/#{order.id}", method: :post %></td>
        <% @order_fields.each do |field| %>
            <td><%= order[field] %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
