<%= bootstrap_form_for(@load, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10') do |f| %>
    <%= f.static_control label: 'Delivery date' do %>
        <%= @load.daily_schedule.delivery_date %>
    <% end %>
    <%= f.static_control :delivery_shift %>
    <%= f.static_control label: 'Driver' do %>
        <%= @load.driver.name %>
    <% end %>
    <%= f.static_control label: 'Truck' do %>
        <%= @load.driver.truck.model %>
    <% end %>
<% end %>

