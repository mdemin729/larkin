<p id="notice"><%= notice %></p>

<h1>Listing Csv Imports</h1>

<%= link_to 'New Csv import', new_csv_import_path, class: 'btn btn-default' %>
<br>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Source file</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @csv_imports.each do |csv_import| %>
      <tr>
        <td><%= csv_import.csv_identifier %></td>
        <td><%= csv_import.created_at %></td>
        <td><%= link_to 'Download', csv_import.csv_url %></td>
        <td><%= link_to 'Show', csv_import %></td>
        <td><%= link_to 'Destroy', csv_import, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
