<h1>Client</h1>

<% if @client.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@client.errors.count, "error") %> prohibited
        this client from being saved:
      </h2>
      <ul>
        <% @client.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <%= @client.phone_ext %>
<% end %>

<%= bootstrap_form_for(@client, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10') do |f| %>
    <%= f.static_control :name %>
    <%= f.static_control :address %>
    <%= f.static_control :city %>
    <%= f.static_control :zip %>
    <%= f.static_control :phone_number %>
    <%= f.static_control :phone_ext %>
    <%= link_to 'Edit', edit_client_path(@client), class: 'btn btn-default' %>
    <%= link_to 'Destroy', client_path(@client),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: 'btn btn-default' %>
    <%= link_to 'Back', clients_path, class: 'btn btn-primary' %>
<% end %>
