<h1>Listing Clients</h1>
<div class="row">
  <%= link_to 'New client', new_client_path, class: 'btn btn-default' %>
</div>
<div class="row">
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="2"></th>
    </tr>

    <%= render partial: 'row', collection: @clients, as: :client %>
  </table>
</div>